{
    "version": "0.2.0",
    "configurations": [

        
        {
            "type": "vscode-edge-devtools.debug",
            "request": "launch",
            "name": "Launch Edge & DevTools",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "npm run dev",
            "request": "launch",
            "command": "npm run dev -- --host --open",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "npm build",
            "request": "launch",
            "command": "npm run build",
            "cwd": "${workspaceFolder}"
        }
    ]
}