{
    "version": "0.2.0",
    "configurations": [

    {
        "type": "vscode-edge-devtools.debug",
        "request": "launch",
        "name": "Launch Edge & DevTools",
        "url": "http://localhost:5173",
        "webRoot": "${workspaceFolder}"
    },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: dev",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}"
        }
    ]
}